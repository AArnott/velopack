{
  "metadata": [
    {
      "src": [
        {
          "src": "../src/Velopack",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "artwork/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/velopack"
    ],
    "globalMetadata": {
      "_appName": "Velopack",
      "_appTitle": "Velopack",
      "_appFaviconPath": "artwork/velopack.ico",
      "_enableSearch": true,
      "pdf": false
    }
  }
}