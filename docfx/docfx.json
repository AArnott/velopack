{
  "metadata": [
    {
      "src": [
        {
          "src": "../src/Velopack",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "sdk"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/velopack"
    ],
    "globalMetadata": {
      "_appName": "Velopack",
      "_appTitle": "Velopack",
      "_appFaviconPath": "images/velopack.ico",
      "_enableSearch": true,
      "_disableNextArticle": true,
      "pdf": false
    }
  }
}